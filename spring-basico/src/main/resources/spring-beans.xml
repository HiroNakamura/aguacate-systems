<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="holaMundoBean" class="com.aguacate.aguacate.model.HolaMundo">
       <property name="saludo" value="Juan Carlos"></property>
    </bean>

    <bean id="alumnoBeanTwo" class="com.aguacate.aguacate.model.Alumno">
       <property name="cedula" value="${cedula}"></property>
       <property name="nombre" value="${nombre}"></property>
       <property name="edad" value="${edad}"></property>
    </bean>

    <context:property-placeholder location="application.properties" />
    <context:component-scan base-package="com.aguacate.aguacate.model.*"/>

    <bean id="generadorPDFBeanTwo" class="com.aguacate.aguacate.model.GeneradorPDF"/>
    <bean id="contenedorBean" class="com.aguacate.aguacate.model.Contenedor">
      <constructor-arg ref="generadorPDFBeanTwo" />
    </bean>

    <bean id="modeloBean" class="com.aguacate.aguacate.model.Modelo">
      <property name="valor" value="1890"></property>
      <property name="nombre" value="Thomahak M212"></property>
      <property name="numeros">
        <list>
          <value>1</value>
          <value>2</value>
        </list>
      </property>
      <property name="claves">
      <map>
         <entry key=1 value="Uno">
         <entry key=2 value="Dos">
      </map>
      </property>
    </bean>
    

</beans>